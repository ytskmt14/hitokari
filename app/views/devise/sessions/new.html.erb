<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
<div class="form-control">
  <label class="label">
    <%= f.label :email, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.email_field :email, class: "input input-bordered", size: 100, autofocus: true, autocomplete: "email" %>
  </label>
</div>

<div class="form-control">
  <label class="label">
    <%= f.label :password, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.password_field :password, class: "input input-bordered", size: 20, autocomplete: "current-password" %>
  </label>
</div>

<% if devise_mapping.rememberable? %>
<div class="form-control">
  <label class="label cursor-pointer">
    <%= f.label :remember_me, class: "label-text" %>
    <%= f.check_box :remember_me, class: "checkbox" %>
  </label>
  <label class="input-group"></label>
</div>
<% end %>

<div class="form-control mt-5">
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-accent" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
