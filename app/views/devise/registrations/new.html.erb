<h2>ユーザ登録</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="form-control">
  <label class="label">
    <%= f.label :full_name, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.text_field :last_name, class: "input input-bordered mr-4", size: 15, autofocus: true %>
    <%= f.text_field :first_name, class: "input input-bordered", size: 15 %>
  </label>
</div>

<div class="form-control">
  <label class="label">
    <%= f.label :email, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.email_field :email, class: "input input-bordered", size: 100, autocomplete: "email" %>
  </label>
</div>

<div class="form-control">
  <label class="label">
    <%= f.label :password, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.password_field :password, class: "input input-bordered", size: 20, autocomplete: "new-password" %>
  </label>
</div>

<div class="form-control">
  <label class="label">
    <%= f.label :password_confirmation, class: "label-text" %>
  </label>
  <label class="input-group">
    <%= f.password_field :password_confirmation, class: "input input-bordered", autocomplete: "new-password" %>
  </label>
</div>

<div class="form-control mt-5">
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-accent" %>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
